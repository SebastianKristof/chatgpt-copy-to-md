{
  "manifest_version": 3,
  "name": "ChatGPT â†’ Markdown Copier",
  "version": "1.0.0",
  "description": "Copy selected text or full ChatGPT responses to Markdown format",
  "permissions": [
    "clipboardWrite",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Copy to Markdown"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-extension": {
      "suggested_key": {
        "default": "Ctrl+Shift+M",
        "mac": "Command+Shift+M"
      },
      "description": "Toggle ChatGPT to Markdown Copier"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ]
}
