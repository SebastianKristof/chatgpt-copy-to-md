{
  "manifest_version": 3,
  "name": "ChatGPT â†’ Markdown Copier",
  "version": "1.0.0",
  "description": "Copy selected text or full ChatGPT responses to Markdown format",
  "permissions": [
    "clipboardWrite",
    "storage"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ]
}
